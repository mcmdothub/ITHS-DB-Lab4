<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ITHS_DB_Lab4</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav role="navigation" class="navbar navbar-expand-sm">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="../images/bear-paw.svg" class="dark-bear-logo" />ITHS_DB_Lab4
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto"></ul>
                    <ul class="navbar-nav">

                        <li class="nav-item">
                            <a asp-action="Index" asp-controller="Activity" class="nav-link">My activities</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Contact" asp-controller="Home" class="nav-link">Contact</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">

                                <a asp-controller="Account" asp-action="Logout" class="nav-link">Logout @User.Identity.Name</a>
                            </li>

                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                            </li>

                            <li class="nav-item">

                                <a asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
                            </li>

                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
    </main>
    <footer>
        <div class="container padded-top">&copy; @DateTime.Now.Year - ITHS-DB-Lab4   //Gym Management</div>
    </footer>
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/Site.js"></script>
    @RenderSection("Scripts", false)
</body>

</html>